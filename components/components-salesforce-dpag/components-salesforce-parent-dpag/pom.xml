                </exclusions>
            </dependency>
            <dependency>
                <groupId>org.talend.components</groupId>
                <artifactId>components-api-service-rest</artifactId>
                <version>${components.version}</version>
                <type>test-jar</type>
            </dependency>
            <dependency>
